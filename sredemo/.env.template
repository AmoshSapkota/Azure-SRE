# Azure SRE Demo - Environment Configuration Template
# INSTRUCTIONS: Copy this file to .env and fill in your actual Azure credentials

# Azure Application Insights Configuration
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=YOUR_INSTRUMENTATION_KEY;IngestionEndpoint=https://YOUR_REGION.in.applicationinsights.azure.com/;LiveEndpoint=https://YOUR_REGION.livediagnostics.monitor.azure.com/;ApplicationId=YOUR_APPLICATION_ID

# Azure Log Analytics Workspace Configuration  
LOG_ANALYTICS_WORKSPACE_ID=YOUR_WORKSPACE_ID
LOG_ANALYTICS_WORKSPACE_KEY=YOUR_WORKSPACE_KEY

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=azure-sre-demo
OTEL_SERVICE_VERSION=1.0.0
OTEL_RESOURCE_ATTRIBUTES=service.name=azure-sre-demo,service.version=1.0.0,deployment.environment=production

# Application Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=production
LOG_LEVEL=INFO

# Enhanced JAVA_TOOL_OPTIONS with comprehensive Azure monitoring
JAVA_TOOL_OPTIONS=-javaagent:opentelemetry-javaagent.jar -Dotel.service.name=azure-sre-demo -Dotel.service.version=1.0.0 -Dotel.resource.attributes=service.name=azure-sre-demo,service.version=1.0.0,deployment.environment=production -Dotel.exporter.azuremonitor.connection.string=${APPLICATIONINSIGHTS_CONNECTION_STRING} -Dotel.logs.exporter=azuremonitor -Dotel.metrics.exporter=azuremonitor -Dotel.traces.exporter=azuremonitor
